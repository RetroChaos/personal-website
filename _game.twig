{% extends '_baseTemplate' %}
{% set metaTitle = 'Juniper Studios - Game: ' ~ entry.title %}
{% set heroImg = entry.gameHeroImage.one().url %}
{% set logo = entry.gameLogo.one().url %}

{% block body %}
    <div class="hero text-center d-flex align-items-center justify-content-center">
        <div class="container">
            <h1>{{entry.gameTagline}}</h1>
        </div>
        <div class="hero-img" style="background-image: url({{heroImg}})"></div>
    </div>

    <div class="container">
        <h3 class="py-5 text-center">{{entry.gameSubTagline}}</h3>
        <div class="row">
            <div class="col-12 col-lg-8">
                {{entry.gameDescription}}
            </div>
            <div class="col-lg-4 d-none d-lg-flex align-self-start">
                <img src="{{logo}}" style="object-fit: contain">
            </div>
        </div>

        <h2 class="text-center py-4">Screenshots</h2>
        
        <div class="row slideshow mx-auto">
            {% for image in entry.gameScreenshots.all() %}
                <div><img src="{{image.url}}"></div>
            {% endfor %}
        </div>

        <h2 class="text-center py-3">Where To Buy</h2>

        <div class="row justify-content-center text-center mb-5 mx-2" id="where-to-buy">
            {% for block in entry.gameWhereToBuyMatrix.all() %}
            <div class="col-12 col-lg-4 m-3 wtb">
                <h4><i class="{{block.wtbFontAwesomeIcon}}"></i><span> {{block.wtbStore}}</span></h4>
                <p>{{block.wtbStoreDescription}}</p>
                <a href="{{block.wtbStoreUrl}}" class="btn"><span data-hover="Buy Now">Buy Now</span></a>
            </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}